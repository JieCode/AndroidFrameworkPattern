<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View"/>

        <variable
            name="userViewModel"
            type="com.hongri.model.mvvm.viewmodel.MVVMDataViewModel"/>

        <variable
            name="handlers"
            type="com.hongri.model.mvvm.view.MVVMActivity"/>

        <variable
            name="data"
            type="String"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnMVVM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{handlers.onClickRequestData}"
            android:text="点击请求数据"/>

        <Button
            android:id="@+id/btnToast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{handlers.onClickShowToastData}"
            android:text="请求数据成功后提示Toast"/>

        <TextView
            android:id="@+id/tvData"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@{userViewModel.data}"/>
    </LinearLayout>
</layout>
